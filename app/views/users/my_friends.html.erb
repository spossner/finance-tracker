<h1>My Friends</h1>
<div class="search-area">
  <h3>Search User</h3>
  <%= form_with url: search_friend_path, method: :get do %>
    <div class="row">
      <div class="col-9 input-group mb-3">
        <%= text_field_tag :q, params[:q], placeholder: "User name or email", autofocus: true, class: "form-control form-control-lg" %>
        <div class="input-group-append">
          <%= button_tag type: :submit, class: "btn btn-success"  do %>
            <%= fa_icon "search " %>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
  <div id="results">
  </div>
  <% if @friends.present? %>
    <%= render partial: 'users/list', object: @friends %>
  <% end %>
</div>

