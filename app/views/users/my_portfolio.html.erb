<div class="row">
  <div class="col-6">
    <h1>My Portfolio</h1>
  </div>
  <div class="col-3 text-right">
    <%= link_to "Refresh prices", refresh_prices_path(user_id: current_user.id), method: :post, class: "btn btn-primary" %>
  </div>
</div>
<div class="search-area">
  <h3>Search Stock</h3>
  <%= form_with url: search_stock_path, method: :get do %>
    <div class="row">
      <div class="col-9 input-group mb-3">
        <%= text_field_tag :stock, params[:stock], placeholder: "Stock ticker symbol", autofocus: true, class: "form-control form-control-lg" %>
        <div class="input-group-append">
          <%= button_tag type: :submit, class: "btn btn-success"  do %>
            <%= fa_icon "search " %>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
  <div id="results">
  </div>
  <% if @tracked_stocks.present? %>
    <%= render partial: 'stocks/list', object: @tracked_stocks %>
  <% end %>
</div>

